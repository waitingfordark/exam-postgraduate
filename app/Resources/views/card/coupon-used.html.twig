<div class="card-pack-item coupon-item useless">
  {% if cardDetail.targetType == "course" %}
    <p class="title">{{'coupon.used_status.course'|trans}}</p>
  {% endif %}
  {% if cardDetail.targetType == "classroom" %}
    <p class="title">{{'coupon.used_status.classroom'|trans}}</p>
  {% endif %}
  {% if cardDetail.targetType == "vip" %}
    <p class="title">{{'coupon.used_status.vip'|trans}}</p>
  {% endif %}
	{% if cardDetail.targetType == "all" %}
			<p class="title">{{'coupon.used_status.all'|trans}}</p>
	{% endif %}
  <p class="price">
    {% if cardDetail.type == "minus" %}ï¿¥{% endif %}<strong>{{ cardDetail.rate }}</strong>{% if cardDetail.type == "discount" %}{{'coupon.discount'|trans}}{% endif %}
  </p>
  <p>{{'coupon.expired_on'|trans}}<span>{{'coupon.deadline_year'|trans({'%deadline%': cardDetail.deadline|date('Y')})}}{{'coupon.deadline_month'|trans({'%deadline%': cardDetail.deadline|date('n')}) }}{{'coupon.deadline_day'|trans({'%deadline%': cardDetail.deadline|date('d')}) }}</span></p>
  {% if cardDetail.targetType == 'fullDiscount' and cardDetail.fullDiscountPrice %}
    <p>{{'coupon.Requirements'|trans({'%fullDiscountPrice%': cardDetail.fullDiscountPrice|default('coupon.Accessible'|trans)})}}<span></span></p>
  {% endif %}
  <div class="stamp stamp-used"></div>
</div>

