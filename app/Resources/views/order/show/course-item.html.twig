{% set courseOrderShow = slot('course.order.show_item', {'product': product}) %}
{% if courseOrderShow|default() %}
  {{ courseOrderShow|raw }}
{% else %}
  <div class="order-center-card clearfix">
    <div class="order-center-card__img">
      <a href="{{ path('course_show', {id: product.targetId}) }}">
        <img src="{{ filepath(course_set_cover(product.courseSet, 'middle'), 'courseSet.png') }}" alt="{{ product.title }}">
      </a>
    </div>
    <div class="order-center-card__info">
      <div class="order-center-card__title">
        {{ product.title }}
      </div>
      <div class="order-center-card__price" role="total-price">
        {{ product.originPrice|price_format }}
      </div>
    </div>
  </div>
{% endif %}


