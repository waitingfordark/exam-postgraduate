{% extends 'bootstrap-modal-layout.html.twig' %}

{% block title %}{{'course.members_manage.official_student.show.content_title'|trans}}{% endblock %}

{% block body %}

<table class="table table-striped table-condenseda table-bordered">
	{% if userinfoFields %}
	{% for field in userinfoFields %}
		{% if field == 'truename' %}
		<tr>
			<th width="25%">{{'user.fields.truename_label'|trans}}</th>
			<td>
				{% if profile.truename %}
					{{ profile.truename }}
				{% else %}
					{{'site.data.empty'|trans}}
				{% endif %}
			</td>
		</tr>
		{% elseif field == 'gender' %}
		<tr>
			<th width="25%">{{'user.fields.gender_label'|trans}}</th>
			{% if profile.gender == 'male' %}
				<td>{{'user.fields.gender.male'|trans}}</td>
			{% elseif profile.gender == 'female' %}
				<td>{{'user.fields.gender.female'|trans}}</td>
			{% elseif profile.gender == 'secret' %}
				<td>{{'site.data.empty'|trans}}</td>
			{% endif %}
		</tr>
		{% elseif field == 'job' %}
		<tr>
			<th width="25%">{{'user.fields.career_label'|trans}}</th>
			<td>
				{% if profile.job %}
					{{ profile.job }}
				{% else %}
					{{'site.data.empty'|trans}}
				{% endif %}
			</td>
		</tr>
		{% elseif field == 'company' %}
		<tr>
			<th width="25%">{{'user.fields.company_label'|trans}}</th>
			<td>
				{% if profile.company %}
					{{ profile.company }}
				{% else %}
					{{'site.data.empty'|trans}}
				{% endif %}
			</td>
		</tr>
		{% elseif field == 'mobile' %}
		<tr>
			<th>{{'user.fields.mobile_label'|trans}}</th>
			<td>
				{% if profile.mobile %}
					{{ profile.mobile }}
				{% else %}
					{{'site.data.empty'|trans}}
				{% endif %}
			</td>
		</tr>
		{% elseif field == 'title' %}
		<tr>
			<th>{{'user.fields.title_label'|trans}}</th>
			<td>
				{% if profile.title %}
					{{ profile.title }}
				{% else %}
					{{'site.data.empty'|trans}}
				{% endif %}
			</td>
		</tr>
		{% elseif field == 'signature' %}
		<tr>
			<th>{{'user.fields.sign_label'|trans}}</th>
			<td>
				{% if profile.signature %}
					{{ profile.signature }}
				{% else %}
					{{'site.data.empty'|trans}}
				{% endif %}
			</td>
		</tr>
		{% elseif field == 'about' %}
		<tr>
			<th>{{'user.fields.introduction_label'|trans}}</th>
			<td>
				{% if profile.about %}
					<div class="editor-text">
					{{ profile.about|cdn|raw }}
					</div>
				{% else %}
					{{'site.data.empty'|trans}}
				{% endif %}
			</td>
		</tr>
		{% elseif field == 'weibo' %}
		<tr>
			<th>{{'user.fileds.microblog'|trans}}</th>
			<td>
				{% if profile.weibo %}
					{{ profile.weibo }}
				{% else %}
					{{'site.data.empty'|trans}}
				{% endif %}
			</td>
		</tr>
		{% elseif field == 'weixin' %}
		<tr>
			<th>{{'user.fileds.wechat'|trans}}</th>
			<td>
				{% if profile.weixin %}
					{{ profile.weixin }}
				{% else %}
					{{'site.data.empty'|trans}}
				{% endif %}
			</td>
		</tr>
		{% elseif field == 'qq' %}
		<tr>
			<th>{{'user.fileds.qq'|trans}}</th>
			<td>
				{% if profile.qq %}
					{{ profile.qq }}
				{% else %}
					{{'site.data.empty'|trans}}
				{% endif %}
			</td>
		</tr>
		{% endif %}
	{% for userField in userFields %}
		{% if field == userField.fieldName %}
		<tr>
			<th>{{userField.title}}</th>
			<td>
				{% if profile[userField.fieldName] %}
					{{ profile[userField.fieldName] }}
				{% else %}
					{{'site.data.empty'|trans}}
				{% endif %}
			</td>
		</tr>
		{% endif %}
	{% endfor %}
	{% endfor %}
	{% endif %}

</table>

{% endblock %}

{% block footer %}
		<button type="button" class="btn btn-primary" data-dismiss="modal">{{'form.radio_btn.close'|trans}}</button>
{% endblock %}
