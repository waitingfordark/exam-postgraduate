<div class="form-group">
  <div class="col-sm-2 control-label">
    <label for="title" class="control-label-required">{{ 'course.plan_setup.name'|trans }}</label>
  </div>
  <div class="col-sm-8">
    <input class="form-control js-course-title" type="text" id="title" name="title" placeholder="{{ 'course.plan_setup.placeholder'|trans }}" value="{{ course.title|default('') }}">
  </div>
</div>
<div class="form-group">
  <div class="col-sm-2 control-label">
  <label>{{ 'course.plan_setup.subtitle'|trans }}</label>
  </div>
  <div class="col-sm-8">
    <textarea class="form-control js-course-subtitle" id="subtitle" name="subtitle">{{ course.subtitle|default('') }}</textarea>
  </div>
</div>