
{% if is_un_multi_courseset(courseSet.id) %}
  {% set type = 'site.default.course'|trans %}
{% endif %}
{% if app.user.isAdmin() or setting('course.teacher_manage_student', 0) %}
  {% if course.status == 'published' %}
    <button class="cd-btn cd-btn-info cd-btn-sm mhs" id="student-add-btn" data-toggle="modal" data-target="#modal" data-url="{{ path('course_set_manage_course_students_add', {courseSetId:courseSet.id, courseId: course.id}) }}">{{'course.members_manage.add_btn'|trans}}</button>
  {% else %}
    <a class="cd-btn cd-btn-info cd-btn-sm mhs" disabled id="student-add-btn" data-toggle="tooltip" data-placement="top" title="{{ 'course.members_manage.add_failed_tips'|trans({'%type%':type|default('site.default.plan'|trans) }) }}"> {{'course.members_manage.add_btn'|trans}}</a>
  {% endif %}
{% endif %}

