{% extends 'bootstrap-modal-layout.html.twig' %}
{% block title %}{{'site.tips'|trans}}{% endblock %}
{% block body %}
  <span class="color-gray">
    {% if course.buyable|default(true) == false %}
      {{'course.course_limited_tips'|trans}}
    {% elseif courseSet.status|default('published') !=  'published' %}
      {{'course.courseSet_closed_tips'|trans({'%title%': courseSet.title })}}
    {% elseif course.status|default('published') !=  'published' %}
      {{'course.course_closed_tips'|trans({'%title%': course.title })}}
    {% endif %}

  <span>
{% endblock %}
{% block footer %}{% endblock %}
