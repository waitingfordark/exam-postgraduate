{% extends 'admin/layout.html.twig' %}

{% set menu = 'admin_setting_questions_setting' %}

{% block main %}

{{ web_macro.flash_messages() }}

<form class="form-horizontal" method="post" id="course-form" novalidate>

<fieldset>
    <div class="form-group">
      <div class="col-md-3 control-label">
        <label>{{'admin.setting_course.questions_setting'|trans}}</label>
      </div>
      <div class="controls col-md-8 radios">
        {{ radios('testpaper_answers_show_mode', {'hide':'admin.setting_course.questions_setting.hide'|trans, 'reviewed':'admin.setting_course.questions_setting.reviewed'|trans , 'submitted':'admin.setting_course.questions_setting.submitted'|trans}, setting('questions.testpaper_answers_show_mode','submitted')) }}
      </div>
    </div>
</fieldset>

  <div class="form-group">
    <div class="controls col-md-offset-3 col-md-8">
      <button type="submit" class="btn btn-primary">{{'form.btn.submit'|trans}}</button>
    </div>
  </div>
  <input type="hidden" name="_csrf_token" value="{{ csrf_token('site') }}">

</form>

{% endblock %}