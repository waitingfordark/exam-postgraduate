{% import 'admin/macro.html.twig' as admin_macro %}
<tr id="job-table-tr-{{ job.id }}">
    <td>
        {{ job.name }}
    </td>

    <td>
        {{ job.class }}
    </td>

    <td>
        {{ job.source }}
    </td>

    <td>
        {{ job.pre_fire_time|date('Y-m-d H:i:s') }}
    </td>

    <td>
        {{ job.next_fire_time|date('Y-m-d H:i:s') }}
    </td>

    <td>
        {% if job.enabled %}
            启用
        {% else %}
            禁用
        {% endif %}
    </td>

    <td>
        <div class="btn-group">
            <button type="button" class="btn btn-default btn-sm dropdown-toggle" data-toggle="dropdown">
                {{'操作'|trans}}
                <span class="caret"></span>
            </button>

            <ul class="dropdown-menu">
                <li><a href="#modal" data-toggle="modal" data-url="{{ path('admin_job_fires', {'id': job.id}) }}" ><span class="glyphicon"></span> {{'运行日志'|trans}}</a></li>
                {% if job.enabled %}
                    <li><a class="job-enabled" data-url="{{ path('admin_job_disabled', {'id': job.id}) }}" target="_blank"><span class="glyphicon"></span> {{'禁用'|trans}}</a></li>
                {% else %}
                    <li><a class="job-enabled" data-url="{{ path('admin_job_enabled', {'id': job.id})}}" target="_blank"><span class="glyphicon"></span> {{'启用'|trans}}</a></li>
                {% endif %}
            </ul>
        </div>
    </td>
</tr>