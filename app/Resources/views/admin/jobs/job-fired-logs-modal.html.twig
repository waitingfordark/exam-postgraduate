{% extends 'old-bootstrap-modal-layout.html.twig' %}

{% import "macro.html.twig" as web_macro %}

{% block title %}
    任务日志
{% endblock %}

{% block body %}

    {% if logs %}
        <table class="table table-striped table-hover">
            <thead>
            <tr>
                <th>{{'时间'|trans}}</th>
                <th>{{'名称'|trans}}</th>
                <th>{{'来源'|trans}}</th>
                <th>{{'状态'|trans}}</th>
            </tr>
            </thead>
            <tbody>
            {% for log in logs %}
                {% include 'admin/jobs/log-tr.html.twig' with {log:log} %}
            {% endfor %}
            </tbody>

        </table>
    {% else %}
        <div class="empty">{{'暂无日志信息!'|trans}}</div>
    {% endif %}

    {{ web_macro.ajax_paginator(paginator) }}
{% endblock %}

{% block footer %}
    <button type="button" class="btn btn-link" data-dismiss="modal" >{{'关闭'|trans}}</button>
    <script>app.load('topxiaadminbundle/controller/jobs/job-fired-logs-modal');</script>
{% endblock %}