{% extends 'admin/layout.html.twig' %}

{% set menu = 'admin_operation_scratch_material_manage' %}

{% set script_controller = 'scratch-material/manage' %}

{% block main %}
  <div class="well well-sm mtl">
    <form id="material-search-form" class="form-inline" action="" method="get" novalidate>
      <div class="form-group">
        <select style="max-width:150px;" class="form-control" name="categoryId">
          {{ select_options(category_choices('scratch_material'), app.request.query.get('categoryId'), 'admin.operation.scratch_material_manage.category_placeholder'|trans) }}
        </select>
      </div>
      <div class="form-group">
        <select class="form-control" name="type">
          {{ select_options(dict('scratchMaterialType'), app.request.query.get('type'), 'admin.operation.scratch_material_manage.type_placeholder'|trans) }}
        </select>
      </div>
      <div class="form-group">
        <input class="form-control" type="text"
               placeholder="{{ 'admin.operation.scratch_material_manage.title_placeholder'|trans }}" name="title"
               value="{{ app.request.get('title') }}">
      </div>

      <button class="btn btn-primary">{{ 'form.btn.search'|trans }}</button>
    </form>
  </div>


  <table class="table table-striped table-hover" id="material-table" style="word-break:break-all;">
    <thead>
    <tr>
      <th>{{ 'admin.operation.scratch_material_manage.thread_number_th'|trans }}</th>
      <th width="20%">{{ 'admin.operation.scratch_material_manage.thread_title_th'|trans }}</th>
      <th>{{ 'admin.operation.scratch_material_manage.thread_type_th'|trans }}</th>
      <th>{{ 'admin.operation.scratch_material_manage.thread_price_th'|trans }}</th>
      <th>{{ 'admin.operation.scratch_material_manage.thread_status_th'|trans }}</th>
      <th>{{ 'admin.operation.scratch_material_manage.thread_creator_th'|trans }}</th>
      <th>{{ 'admin.operation.scratch_material_manage.thread_operation_th'|trans }}</th>
    </tr>
    </thead>
    <tbody>
    {% for material in materials %}
      {% set creator = creators[material.createdUserId] %}

      {% include 'admin/scratch-material/tr.html.twig' %}
    {% else %}
      <tr>
        <td colspan="20">
          <div class="empty">{{ 'admin.operation.scratch_material_manage.empty'|trans }}</div>
        </td>
      </tr>
    {% endfor %}
    </tbody>
  </table>

  {{ admin_macro.paginator(paginator) }}
{% endblock %}