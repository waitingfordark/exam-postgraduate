<table class="table table-condensed table-noborder table-overflow">
  <thead>
    <tr>
      <th width="10%"></th>
      <th width="70%">{{ 'admin.account_center.payment.user_name'|trans }}</th>
      <th class="text-right prl" width="25%">{{ 'admin.account_center.payment.amount_count'|trans }}</th>
    </tr>
  </thead>
  <tbody>
  {% for amount in amounts %}
    <tr>
      <td>{{ loop.index }}</td>
      <td>
        <a class="link-primary"
           target="_blank" href="{{ path('user_show', {id:amount.userId}) }}">{{users[amount.userId].nickname}}</a>
      </td>
      <td class="text-right prl">{{amount.count}}</td>
    </tr>
  {% else %}
    <tr><td><div class="empty">{{'admin.account_center.payment.amount.empty'|trans}}</div></td></tr>
  {% endfor %}
  </tbody>
</table>