{% extends 'admin/layout.html.twig' %}

{% set script_controller = 'topxiaadminbundle/controller/classroom/recommend-list' %}
{% set menu = 'admin_classroom_recommend' %}

{% block main %}

  <table class="table table-striped table-hover" id="classroom-table">
    <thead>
    <tr>
      <th>{{'admin.classroom_manage.recommend.seq_th'|trans}}</th>
      <th width="50%">{{'admin.classroom_manage.recommend.name_th'|trans({'%name%':setting('classroom.name')|default('classroom'|trans)})}}</th>
      <th>{{'admin.classroom_manage.recommend.create_time_th'|trans}}</th>
      <th>{{'admin.classroom_manage.recommend.recommend_time_th'|trans}}</th>
      <th>{{'admin.classroom_manage.recommend.operate_th'|trans}}</th>
    </tr>
    </thead>
    <tbody>
      {% for classroom in classrooms %}
        {% include 'admin/classroom/recommend-tr.html.twig' %}
      {% else %}
        <tr><td colspan="20"><div class="empty">{{'admin.classroom_manage.recommend.empty'|trans({'%name%':setting('classroom.name')|default('site.default.classroom'|trans)})}}</div></td></tr>
      {% endfor %}
    </tbody>
  </table>

  <nav class="text-center">
    {{ admin_macro.paginator(paginator) }} 
  </nav>

{% endblock %}