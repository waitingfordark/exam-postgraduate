{% extends 'old-bootstrap-modal-layout.html.twig' %}

{% block title %} 
{{'admin.sensitive_manage.add_sensitive'|trans}}
{% endblock %}
{% block body %}
  <form class="form-horizontal" id="keyword-form" action="{{ path('admin_keyword_create') }}" method="post">
    <div class="row form-group">
      <label class="col-md-3 control-label" for="keyword-name-field">{{'admin.sensitive_manage.sensitive'|trans}}</label>
      <div class="col-md-6 controls">
        <textarea style="resize:vertical;height:250px;" class="form-control" id="keyword-name-field" name="name"></textarea>
        <p class="help-block">{{'admin.sensitive_manage.add_sensitive_tips'|trans}}</p>
      </div>
    </div>
    <div class="row form-group">
      <div class="col-md-3 control-label">
        <label for="keyword-name-field">{{'admin.sensitive_manage.sensitive_type'|trans}}</label>
      </div>
      <div class="col-md-7 controls radios">
        <input type="radio" id="replaced" name="state" class="state" value="replaced" checked="checked" data-text="{{'admin.sensitive_manage.replaced_tips'|trans}}">
        <label for="replaced">{{'admin.sensitive_manage.replaced'|trans}}</label>
        <input type="radio" id="banned" name="state" calss="state" value="banned" data-text="{{'admin.sensitive_manage.banned_tips'|trans}}">
        <label for="banned">{{'admin.sensitive_manage.banned'|trans}}</label>
        <p class="help-block">{{'admin.sensitive_manage.replaced_tips'|trans}}</p>
      </div>

    </div>
    <input type="hidden" name="_csrf_token" value="{{ csrf_token('site') }}">
  </form>
{% endblock %}

{% block footer %}
  <button type="button" class="btn btn-link" data-dismiss="modal">{{'form.btn.cancel'|trans}}</button>
  <button id="keyword-add-btn" data-submiting-text="{{'form.btn.submit.submiting'|trans}}" type="submit" class="btn btn-primary" data-toggle="form-submit" data-target="#keyword-form">{{'admin.sensitive_manage.add_sensitive_btn'|trans}}</button>
{% endblock %}
